//Find angle between two points
L1 = {LAYER 1};
L2 = {LAYER 2};
this_point = L1.toComp(L1.anchorPoint);
that_point = L2.toComp(L2.anchorPoint);
delta = sub(this_point, that_point);
angle = Math.atan2(delta[1], delta[0]);
ang = radiansToDegrees(angle);
r = 10 * Math.sin((time - index) * 10);
(ang)%360